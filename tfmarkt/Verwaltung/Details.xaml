<Window x:Class="tfmarkt.Verwaltung.Details"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Details" Height="300" Width="300" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterOwner" WindowState="Normal" BorderBrush="Black" BorderThickness="1">
    <Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="80*"/>
                <RowDefinition Height="15*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="10*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20*"/>
                    <ColumnDefinition Width="45*"/>
                </Grid.ColumnDefinitions>

                <Label Content="Artikelnummer" Grid.Row="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                <Label Content="Titel" Grid.Row="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                <Label Content="Preis" Grid.Row="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                <Label Content="Beschreibung" Grid.Row="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                <Label Name="lbLaenge" Content="Länge (cm)" Grid.Row="4" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                <Label Name="lbBreite" Content="Breite (cm)" Grid.Row="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                <Label Name="lbVar1" Content="Variabel 1" Grid.Row="6" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                <Label Name="lbVar2" Content="Variabel 2" Grid.Row="7" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
                <TextBox Name="tbArtikelnummer" Grid.Row="0" Grid.Column="1" TextWrapping="Wrap" Text="Artikelnummer" VerticalContentAlignment="Center"  />
                <TextBox Name="tbTitel" Grid.Row="1" Grid.Column="1" TextWrapping="Wrap" Text="Titel" VerticalContentAlignment="Center"  />
                <TextBox Name="tbPreis" Grid.Row="2" Grid.Column="1" TextWrapping="Wrap" Text="Preis" VerticalContentAlignment="Center"  />
                <TextBox Name="tbBeschreibung" Grid.Row="3" Grid.Column="1" TextWrapping="Wrap" Text="Beschreibung" VerticalContentAlignment="Center"  />
                <TextBox Name="tbLaenge" Grid.Row="4" Grid.Column="1" TextWrapping="Wrap" Text="Länge" VerticalContentAlignment="Center"  />
                <TextBox Name="tbBreite" Grid.Row="5" Grid.Column="1" TextWrapping="Wrap" Text="Breite" VerticalContentAlignment="Center"  />
                <TextBox Name="tbVar1" Grid.Row="6" Grid.Column="1" TextWrapping="Wrap" Text="Variabel 1" VerticalContentAlignment="Center"  />
                <TextBox Name="tbVar2" Grid.Row="7" Grid.Column="1" TextWrapping="Wrap" Text="Variabel 2" VerticalContentAlignment="Center"  />
            </Grid>
            
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10*"/>
                    <ColumnDefinition Width="10*"/>
                </Grid.ColumnDefinitions>
                <Button Name="btnSpeichern" Content="Speichern" Grid.Column="0" HorizontalAlignment="Center" Margin="10" VerticalAlignment="Center" Width="75"/>
                <Button Name="btnAbbrechen" Content="Abbrechen" Grid.Column="1" HorizontalAlignment="Center" Margin="10" VerticalAlignment="Center" Width="75" Click="btnAbbrechen_Click"/>
            </Grid>
        </Grid>
       


    </Grid>
</Window>
