<Window x:Class="tfmarkt.Kalkulation.KalkulationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tfmarkt.Kalkulation"
        mc:Ignorable="d"
        Title="KalkulationWindow" Height="500" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="80*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="60*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="10*"/>
            </Grid.RowDefinitions>
            <!-- Grid Kopf -->
            <Label VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Grid.Row="0">Räume</Label>

            <!-- Grid Body -left- -->

            <ListBox Name="lbRaeume"  ScrollViewer.HorizontalScrollBarVisibility="Disabled" Grid.Row="1">
                <ListBoxItem Height="25" Selected="ShowDetail">
                    Raum
                </ListBoxItem>
            </ListBox>


            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50*"/>
                    <ColumnDefinition Width="50*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" Content="+" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="22"/>
                <Label Grid.Column="1" Content="-" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="22"/>
            </Grid>
            
        </Grid>

        <!-- Grid Body -right- -->
        <Grid Grid.Column="1" Grid.Row="1">
            <DataGrid Name="dataGrid" IsReadOnly="True" CanUserReorderColumns="False" FontSize="22" SelectionMode="Single" />
        </Grid>
    </Grid>
</Window>
